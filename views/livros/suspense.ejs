<%- include('../partials/header.ejs'); %>
<body>
  <div style="background: url(/img/aboutus.jpg); width: 100%; height: 400px; background-attachment: fixed, scroll;">

  </div>
  <%- include('../partials/navbar.ejs'); %>
  <br><br><br><br><br>
  <div style="text-align: center;">
    <h1  class="h1-b" style="color: #17202A;">Suspense</h1>
  </div>  
  <br><br>
  <h6 style="margin-left: 1%;">LIVROS DE SUSPENSE</h6>  
  <% livros.forEach(livros =>{ %>
    <% if (livros.CategoryId == 3) { %>
      <div class="card" style="display: inline-block; width: 13rem; " >
        <img src="<%= livros.img %>" style="height: 15rem;" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title" style="font-size: 20px;"><%= livros.titulo %></h5>
          <p class="card-text" ><%= livros.autor %></p>
          <p class="card-text" style="font-weight: bold; font-size: 18px;">R$:<%= livros.valor%></p>
          <a href="/livros/categoria/<%= livros.id %>" class="btn btn-secondary" >SAIBA MAIS</a>
        </div>
      </div>
      <% } %>
  <% }) %> 